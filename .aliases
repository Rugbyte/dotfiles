# Apt Aliases
alias upgapt='sudo apt update && sudo apt upgrade -y && sudo apt autoremove --purge -y'
alias aptin='sudo apt install -y '

# LS Aliases
alias ls='ls -CF'
alias la='ls -A'
alias ll='ls -lh'

# Docker Aliases
alias dall='docker ps -a'
alias dr='docker run '
alias drs='docker restart '

# Git Aliases
alias gs='git status'
alias gaa='git add .'
alias gcom='git checkout master'
alias gc='git commit'
alias gp='git pull --rebase'
alias gcm='git commit -m'
alias gcam='git commit -am'
